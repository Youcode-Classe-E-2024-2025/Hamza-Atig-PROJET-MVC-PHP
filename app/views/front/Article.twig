{% extends "layout.twig" %}

{% block content %}
    {% if user is defined and user is not null %}
        <h1 class="text-2xl font-bold text-indigo-700">{{ article.title }}</h1>
        <p class="text-gray-600">Publié le {{ article.date }}</p>
        <div class="mt-4 text-gray-800">
            <p>{{ article.content }}</p>
        </div>
        <a href="/" class="mt-6 inline-block bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">Retour à l'accueil</a>
    {% else %}
        <div class="text-center py-10">
            <h2 class="text-xl font-semibold text-red-600">Accès refusé</h2>
            <p class="text-gray-700">Vous devez être connecté pour voir cet article.</p>
            <a href="/login" class="mt-4 inline-block bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">Se connecter</a>
        </div>
    {% endif %}
{% endblock %}
